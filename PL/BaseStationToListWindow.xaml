<Window x:Class="PL.BaseStationToListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="BaseStationToListWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Drone.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <!--<Window.Resources>
        <CollectionViewSource x:Key="baseStationToListViewSource" d:DesignSource="{d:DesignInstance {x:Type BO:BaseStationToList}, CreateList=True}"/>
    </Window.Resources>-->
    <Grid DataContext="">

        <DataGrid x:Name="baseStationToListDataGrid" RowDetailsVisibilityMode="VisibleWhenSelected" Margin="20,54,400,355" ItemsSource="{Binding}" EnableRowVirtualization="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="chargingAvailableColumn" Width="SizeToHeader" Header="charging Available" Binding="{Binding chargingAvailable}"/>
                <DataGridTextColumn x:Name="chargingNotAvailableColumn" Width="SizeToHeader" Header="charging Not Available" Binding="{Binding chargingNotAvailable}"/>
                <DataGridTextColumn x:Name="idnumberColumn" Width="SizeToHeader" Header="idnumber" Binding="{Binding idnumber}"/>
                <DataGridTextColumn x:Name="nameStationColumn" Width="SizeToHeader" Header="name Station" Binding="{Binding nameStation}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Add new station" HorizontalAlignment="Left" Height="33" Margin="615,346,0,0" VerticalAlignment="Top" Width="132"  FontSize="14" FontStyle="Italic" FontFamily="Arial Black" Background="{x:Null}"/>
        <CheckBox Content="ChargingAvailble" HorizontalAlignment="Left" Height="72" Margin="645,217,0,0" VerticalAlignment="Top" Width="120"/>
        <ListBox HorizontalAlignment="Left" Height="40" Margin="660,139,0,0" VerticalAlignment="Top" Width="90"/>
        <Grid.Background>
            <ImageBrush ImageSource="/drone.jpg" Opacity="0.95"/>
        </Grid.Background>

    </Grid>
</Window>


        
   


